@model ScopeViewModel

<li class="list-group-item">
    <div class="form-check form-check-inline">
        <input class="form-check-input"
               type="checkbox"
               name="ScopesConsented"
               id="scopes_@Model.Value"
               value="@Model.Value"
               checked="@Model.Checked"
               disabled="@Model.Required" />
        @if (Model.Required)
        {
            <input type="hidden"
                   name="ScopesConsented"
                   value="@Model.Value" />
        }
        <label class="form-check-label"><strong>@Model.DisplayName</strong></label>
        @if (Model.Emphasize)
        {
            <span class="oi oi-warning ml-2"></span>
        }
    </div>
    @if (Model.Required)
    {
        <span class="text-danger float-right"><em>Required</em></span>
    }
    @if (Model.Description != null)
    {
        <div>
            <label class="mb-0" for="scopes_@Model.Value">@Model.Description</label>
        </div>
    }
</li>
